<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title><%=yield(:title)%></title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<%= yield :meta %>
	<%= stylesheet_link_tag "main", :media=>"screen" %>
	<%= stylesheet_link_tag "tabbed", :media=>"screen" %>
	<%= stylesheet_link_tag "print", :media=>"print" %>
	<link rel="shortcut icon" href="/images/ocean-ico.ico" type="image/x-icon" />
	<link rel="apple-touch-icon" href="/images/ocean-touch-icon.png" />
	<%= yield :stylesheets_links %>
	<link type="text/css" rel="stylesheet" media="screen" href="/ext/resources/css/ext-all.css">
	<link type="text/css" rel="stylesheet" media="screen" href="/ext/examples/ux/css/CheckHeader.css">	    
	<style type="text/css"><%= yield :stylesheets %></style>
	<%= javascript_include_tag :defaults %>
	<script type="text/javascript" src="/ext/ext-all-dev.js"></script>
	<script type="text/javascript">
		Ext.Loader.setConfig({enabled: true});
		Ext.application({
			controllers: ['menu'<%= yield :js_controller %>],
			name: 'app',
			appFolder: '/javascripts/app',
			launch: function() {}
		});
	</script>
	<%= javascript_tag "window._token = '#{form_authenticity_token}'" %>
	<%= yield :js %>
</head>
<body <%= yield :body_attrs %>>


	<div id="header"> 
		<table cellpadding="0" cellspacing="0" width="100%">
			<tr>
				<td class="logobg" width="2%"><img width="20" height="1" src="/images/0.gif" /></td>
				<td><a href="/"><img src="/images/ocean.gif" /></a></td>
				<td valign="bottom" class="logobg title"><nobr><%=yield(:title)%></nobr></td>
				<td class="logobg" align="right" width="96%"><img src="/images/logodecor.gif" /></td>
			</tr>
		</table>
	</div>
	<div id="menu_js"></div>
	<div>
		<div id="left" class="left_content">
			<%= yield(:left_content)%>
		</div>
		<div id="content" class="center_content">
			<% if flash[:notice] -%>     
				<div id="notice"><%= flash[:notice] %></div>  
			<% end -%>
			<%= yield(:content)%>
		</div>		
	</div>
</body>
</html>
