<% content_for :title do %>
Заявка на изменение графика
<%	end -%>

<% content_for :js do %>
<script type="text/javascript">
	function change() {
		var array = new Array(10)

		array[0] = document.getElementById('ddateb_future_year');
		array[1] = document.getElementById('ddateb_future_month');
		array[2] = document.getElementById('ddateb_future_day');
		array[3] = document.getElementById('ddateb_future_hour_hour');
		array[4] = document.getElementById('ddateb_future_minute_minute');

		array[5] = document.getElementById('ddatee_future_year');
		array[6] = document.getElementById('ddatee_future_month');
		array[7] = document.getElementById('ddatee_future_day');
		array[8] = document.getElementById('ddatee_future_hour_hour');
		array[9] = document.getElementById('ddatee_future_minute_minute');

		for(i=0; i<array.length; i++) {
			array[i].disabled == true ? array[i].disabled = false : array[i].disabled = true;
		}
	}
</script>
<% end -%>

<% content_for :content do %>
	<p>Я, <%= h(@displayname)%> (<%= h(@mail)%>), буду отсутствовать в офисе</p>
	<div style="text-align:left">
		<% form_tag ("/schedule_request/sending")do %>
				<nobr>
					<p>

					<label for="ddateb">C:</label>
					<%=select_date(Time.now+1.days,:prefix=>"ddateb",:order=>[:year,:month,:day],:use_month_names => %w(Январь Февраль Март Апрель Май Июнь Июль Август Сентябрь Октябрь Ноябрь Декабрь))%>
					<label for="ddateb_hour"> с </label>
					<%=select_hour(9, :prefix =>"ddateb_hour")%>
					<label for="ddateb">:</label>
					<%=select_minute(00, :prefix =>"ddateb_minute")%>
					</p>
					<p>
					<label for="ddateb"> по </label>
					<%=select_date(Time.now+ 1.days, :prefix =>"ddatee", :use_month_names => %w(Январь Февраль Март Апрель Май Июнь Июль Август Сентябрь Октябрь Ноябрь Декабрь))%>
					<label for="ddatee_hour"> до</label>
					<%=select_hour(18, :prefix =>"ddatee_hour")%>
					<label for="ddatee_minute">:</label>
					<%=select_minute(00, :prefix =>"ddatee_minute")%>

					</p>
				</nobr>
				<p>
					<label for="ddateb">По причине</label>
				</p>
				<p>
					<%=text_area_tag :comments, @comments, :rows => 8, :cols => 45%>
				</p>
				<br/>
				<p>
					<%=check_box_tag "homework", "1", false, :onclick=>"change();" %>
					<label for="homework">Работаю дома</label>
				</p>
				<nobr>
					<p>
						Отработаю это время<br/>
						<label for="ddateb_future">с:</label>
						<%=select_date(Time.now + 1.days, :prefix => "ddateb_future", :use_month_names => %w(Январь Февраль Март Апрель Май Июнь Июль Август Сентябрь Октябрь Ноябрь Декабрь))%>
						<label for="ddateb_future_hour"> с </label>
						<%=select_hour(9, :prefix =>"ddateb_future_hour")%>
						<label for="ddateb_future_minute">:</label>
						<%=select_minute(00, :prefix =>"ddateb_future_minute")%>
					</p>
					<p>
						<label for="ddatee_future"> по </label>
						<%=select_date(Time.now + 1.days, :prefix => "ddatee_future", :use_month_names => %w(Январь Февраль Март Апрель Май Июнь Июль Август Сентябрь Октябрь Ноябрь Декабрь))%>
						<label for="ddatee_future_hour"> до</label>
						<%=select_hour(18, :prefix =>"ddatee_future_hour")%>
						<label for="ddatee_future_minute">:</label>
						<%=select_minute(00, :prefix =>"ddatee_future_minute")%>
					</p>
				</nobr>

				<%= submit_tag "Отправить руководителю"%>

		<% end %>
	</div>
<%	end -%>