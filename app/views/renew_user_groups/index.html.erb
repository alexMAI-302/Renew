<% content_for :title do %>
Группы пользователей
<% end %>
<% content_for :content do %>
	<% form_tag :action => 'save' do %>
		<table>
			<thead>
			  <tr>
				<th>
					Наименование
				</th>
				<th>
				</th>
				<th>
				</th>
			  </tr>
			</thead>

			<tbody>
				<% @renew_user_groups.each do |renew_user_group| %>
					<tr>
						<td><%= text_field_tag 'renew_user_groups['+renew_user_group.id.to_s+']', renew_user_group.name %></td>
						<td><%= link_to("Удалить", {:action => "destroy", :id=>renew_user_group.id}, :confirm => 'Вы уверены? Удалить ?')%></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<%= submit_tag(value = "Сохранить") %>
	<% end %>
	<br/>
	<% form_tag :action => 'create' do %>
		<div><%= text_field_tag 'renew_user_group', @renew_user_group.name %><%= submit_tag(value = "Создать")%></div>
	<% end %>

<% end %>