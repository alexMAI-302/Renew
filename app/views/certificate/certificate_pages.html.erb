<% content_for :title do %>
Сертификат <%= "#{@certificate_number}. #{@goods_name}." %>
<% end %>

<% content_for :content do %>
	<% if !@pictures.nil? %>
			<% @pictures.each do |picture| %>
				 <%= image_tag("/images/certificates/#{picture}.jpg") %>
			<% end %>
	<% else %>
		По вашему запрсу ничего не найдено
	<% end %>
<% end %>

